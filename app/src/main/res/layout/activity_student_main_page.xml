<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".student_main_page">

    <TextView
        android:id="@+id/main_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student main page."
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/user_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_headline"
        android:layout_marginTop="25dp"
        android:text="no user id value set.. you're code has a problem.."
        android:textSize="30sp" />

    <TableLayout
        android:id="@+id/books_table"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Book Name"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Is it in the bag?"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Is it needed for tommorow?"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>


</LinearLayout>