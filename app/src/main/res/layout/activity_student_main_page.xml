<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".student_main_page">

    <TextView
        android:id="@+id/main_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Student Main Page"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/user_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_headline"
        android:layout_marginTop="25dp"
        android:text=" ERROR no user id value set"
        android:textSize="30sp" />


    <TableLayout
        android:id="@+id/books_table"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp">

        <TableRow>

            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Book Name"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Is it in the bag?"
                android:textStyle="bold" />

            <TextView
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Is it needed for tommorow?"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/scan_my_bag_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/books_table"
        android:text="Scan My Backpack"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

</LinearLayout>